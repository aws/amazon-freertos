#CROSS       = $(TOOL_PATH)/bin/arm-none-eabi-
CROSS       = arm-none-eabi-
LIBDIR = GNU
else
TOOL_PATH   = "C:/Keil_v5/ARM/ARMCC/BIN"
CROSS       = $(TOOL_PATH)/
TOOL_INCLUD_PATH = "C:/Keil_v5/ARM"
TOOL_INCLUD = $(TOOL_INCLUD_PATH)
LIBDIR = 
