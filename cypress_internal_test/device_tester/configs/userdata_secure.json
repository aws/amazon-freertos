{
  "sourcePath": "{cy_afr_path}",
  "vendorPath": "{cy_afr_path}/vendors/cypress/boards/{cy_board_name}",
  "buildTool": {
    "name": "mybuild",
    "version": "1.0",
    "command": [
      "bash {cy_afr_path}/cypress_internal_test/device_tester/mybuild.sh {cy_afr_path} {{enableTests}} {cy_board_name} {cy_compiler}"
    ],
    "buildImageInfo" : {
      "testsImageName": "{cy_afr_path}/build/aws_tests",
      "demosImageName": "{cy_afr_path}/build/aws_demos"
    }
  },
  "flashTool": {
    "name": "flash.sh",
    "version": "1.0",
    "command": [
      "bash {cy_afr_path}/cypress_internal_test/device_tester/flash_secure.sh {cy_afr_path} {{device.identifiers[?(@.name == 'serialNo')].value}} {{buildImageName}}"
    ],
    "buildImageInfo" : {
      "testsImageName": "{cy_afr_path}/build/aws_tests.elf",
      "demosImageName": "{cy_afr_path}/build/aws_demos.elf"
    }
  },
  "clientWifiConfig": {
    "wifiSSID": "{cy_wifi_ssid}",
    "wifiPassword": "{cy_wifi_password}",
    "wifiSecurityType": "{cy_wifi_security_type}"
  },
  "testWifiConfig": {
    "wifiSSID": "{cy_wifi_ssid}",
    "wifiPassword": "{cy_wifi_password}",
    "wifiSecurityType": "{cy_wifi_security_type}"
  },
  "echoServerConfiguration": {
    "securePortForSecureSocket": 33333,
    "insecurePortForSecureSocket": 33334,
    "insecurePortForWiFi": 33335
  },
  "otaConfiguration": {
    "otaDemoConfigFilePath": "{{testData.sourcePath}}/vendors/cypress/boards/CY8CKIT_064S0S2_4343W/aws_demos/config_files/aws_demo_config.h",
    "otaFirmwareFilePath": "{{testData.sourcePath}}/build/cm4_upgrade.bin",
    "deviceFirmwareFileName": "{{testData.sourcePath}}/build/cm4_signed.bin",
    "codeSigningConfiguration": {
      "signingMethod": "AWS",
      "signerHashingAlgorithm": "SHA256",
      "signerSigningAlgorithm": "ECDSA",
      "signerCertificate": "arn:aws:acm:us-west-2:969910087511:certificate/b78c5047-d35e-4d34-9706-de316937f530",
      "signerCertificateFileName": "ecdsacert.pem",
      "compileSignerCertificate": true,
      "signerPlatform": "AmazonFreeRTOS-Default",
      "untrustedSignerCertificate": "arn:aws:acm:us-west-2:969910087511:certificate/9cd33865-d81c-45d0-93bd-70e54474e7dd"
    }
  }
}
