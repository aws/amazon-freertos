            "osx" : {
                "command": "bash",
                "args": [
                    "--norc",
                    "-c",
                    "make -j CONFIG=Debug build"
                ]
            },             
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
