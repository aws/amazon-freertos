            },
            "linux" : {
                "command": "bash",
                "args": [
                    "--norc",
                    "-c",
                    "make getlibs"
                ]
            },
            "osx" : {
                "command": "bash",
                "args": [
                    "--norc",
                    "-c",
                    "make getlibs"
                ]
            },            
