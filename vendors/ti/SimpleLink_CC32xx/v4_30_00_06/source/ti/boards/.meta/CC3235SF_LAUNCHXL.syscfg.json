/*
 *  ======== CC3235SF_LAUNCHXL.syscfg.json ========
 *  Board schematic: http://www.ti.com/lit/zip/swrc348
 */

{
    "name"        : "CC3235SF-LAUNCHXL",
    "displayName" : "CC3235SF LaunchPad",
    "device"      : "CC3235SF",
    "part"        : "Default",
    "package"     : "Default",
    "headers"     : [
        {
            "type": "BoosterPack 40 pin",
            "default": true,
            "name": "boosterpack",
            "displayName": "BoosterPack Standard Header",
            "dimensions": {
                "columns": [
                    { "top":  1, "bottom": 10 },
                    { "top": 21, "bottom": 30 },

                    { "blank": true },

                    { "top": 40, "bottom": 31 },
                    { "top": 20, "bottom": 11 }
                ]
            },
            "pins": [
                {
                    "number" : 1,
                    "name"   : "3V3"
                },

                // Header pin 2 is not connected by default. modification of the
                // LaunchPad is required to get the mapping to device pin below.
                //
                // Header pin 2 is aliased to the same device pin as Header Pin 25.
                {
                    "number" : 2,
                    "ball"   : "58",
                    "name"   : "P58*"
                },

                // Header pin 3 is aliased to the Button 1.
                {
                    "number" : 3,
                    "ball"   : "4",
                    "name"   : "P04"
                },
                {
                    "number" : 4,
                    "ball"   : "3",
                    "name"   : "P03"
                },
                {
                    "number" : 5,
                    "ball"   : "61",
                    "name"   : "P61"
                },

                // Header pin 6 is not connected by default. modification of the
                // LaunchPad is required to get the mapping to device pin below.
                // Uncomment the "ball" member to connect this header pin.
                //
                // Header Pin 6 is an alias of Header Pin 26
                {
                    "number" : 6,
                    //"ball"   : "59",
                    "name"   : "P59*"
                },
                {
                    "number" : 7,
                    "ball"   : "5",
                    "name"   : "P05",
                    "preferredType": ["SPI_SCLK"]
                },
                {
                    "number" : 8,
                    "ball"   : "62",
                    "name"   : "P62"
                },

                // Header pin 9 is aliased to the Yellow LED.
                {
                    "number" : 9,
                    "ball"   : "1",
                    "name"   : "P01",
                    "preferredType": ["I2C_SCL"]
                },

                // Header pin 10 is aliased to the Green LED.
                {
                    "number" : 10,
                    "ball"   : "2",
                    "name"   : "P02",
                    "preferredType": ["I2C_SDA"]
                },


                {
                    "number" : 21,
                    "name"   : "5V"
                },
                {
                    "number" : 22,
                    "name"   : "GND"
                },

                // Header pin 23 does not work as GPIO output. It is not
                // connected here as a result.
                // Uncomment the "ball" member to connect this header pin.
                //
                // Header pin 23 is aliased to the usb UART RX pin.
                {
                    "number" : 23,
                    // "ball"   : "57",
                    "name"   : "P57"
                },
                {
                    "number" : 24,
                    "ball"   : "60",
                    "name"   : "P60",
                    "preferredType" : ["AIN"]
                },
                {
                    "number" : 25,
                    "ball"   : "58",
                    "name"   : "P58"
                },
                {
                    "number" : 26,
                    "ball"   : "59",
                    "name"   : "P59",
                    "preferredType" : ["AIN"]
                },
                {
                    "number" : 27,
                    "ball"   : "63",
                    "name"   : "P63"
                },
                {
                    "number" : 28,
                    "ball"   : "53",
                    "name"   : "P53"
                },

                // Header pin 29 is aliased to the Red LED.
                {
                    "number" : 29,
                    "ball"   : "64",
                    "name"   : "P64"
                },
                {
                    "number" : 30,
                    "ball"   : "50",
                    "name"   : "P50"
                },

                // Header Pin 40 is an alias of Header Pin 10 and the Green LED
                {
                    "number" : 40,
                    "ball"  : "58",
                    "name"   : "P58"
                },

                // Header Pin 39 is an alias of Header Pin 9 and the Yellow LED
                {
                    "number" : 39,
                    "ball"  : "50",
                    "name"   : "P50"
                },

                // Header pin 38 is not connected by default. modification of the
                // LaunchPad is required to get the mapping to device pin below.
                // Uncomment the "ball" member to connect this header pin.
                //
                // Header Pin 38 is an alias of Header Pin 31
                {
                    "number" : 38,
                    // "ball"  : "17",
                    "name"   : "P17*"
                },

                // Header pin 37 is not connected by default. modification of the
                // LaunchPad is required to get the mapping to device pin below.
                // Uncomment the "ball" member to connect this header pin.
                //
                // Header Pin 37 is an alias of Header Pin 29 and the Red LED
                {
                    "number" : 37,
                    // "ball"  : "64",
                    "name"   : "P64*"
                },

                // Header pin 36 is not connected by default. modification of the
                // LaunchPad is required to get the mapping to device pin below.
                // Uncomment the "ball" member to connect this header pin.
                //
                // Header Pin 36 is an alias of Header Pin 13
                {
                    "number" : 36,
                    // "ball"  : "21",
                    "name"   : "P21*"
                },

                // Header pin 35 is not connected by default. modification of the
                // LaunchPad is required to get the mapping to device pin below.
                // Uncomment the "ball" member to connect this header pin.
                //
                // Header Pin 35 is an alias of Header Pin 19
                {
                    "number" : 35,
                    // "ball"  : "18",
                    "name"   : "P18*"
                },

                // Header pin 34 is not connected by default. modification of the
                // LaunchPad is required to get the mapping to device pin below.
                // Uncomment the "ball" member to connect this header pin.
                {
                    "number" : 34,
                    // "ball"  : "62",
                    "name"   : "P62*"
                },

                // Header pin 33 is not connected by default. modification of the
                // LaunchPad is required to get the mapping to device pin below.
                // Uncomment the "ball" member to connect this header pin.
                //
                // Header Pin 33 is an alias of Header Pin 24
                {
                    "number" : 33,
                    // "ball"  : "60",
                    "name"   : "P60*"
                },

                // Header pin 32 is an alias of the JTAG TDI pin.
                // Do not use unless JTAG jumpers removed"
                // Uncomment the "ball" member to connect this header pin.
                {
                    "number" : 32,
                    // "ball"   : "16",
                    "name"   : "P16"
                },

                // Header pin 31 is an alias of the JTAG TDO pin.
                // Do not use unless JTAG jumpers removed"
                // Uncomment the "ball" member to connect this header pin.
                {
                    "number" : 31,
                    // "ball"   : "17",
                    "name"   : "P17"
                },


                {
                    "number" : 20,
                    "name"   : "GND"
                },
                {
                    "number" : 19,
                    "ball"   : "18",
                    "name"   : "P18"
                },
                {
                    "number" : 18,
                    "ball"   : "8",
                    "name"   : "P08"
                },
                {
                    "number" : 17,
                    "ball"   : "45",
                    "name"   : "P45"
                },
                {
                    "number" : 16,
                    "name"   : "RST"
                },
                {
                    "number" : 15,
                    "ball"   : "7",
                    "name"   : "P07",
                    "preferredType" : ["SPI_MOSI"]
                },
                {
                    "number" : 14,
                    "ball"   : "6",
                    "name"   : "P06",
                    "preferredType" : ["SPI_MISO"]
                },

                // Header pin 13 is an alias of the device Pin Sense of Power 2 (SOP2).
                {
                    "number" : 13,
                    "ball"   : "21",
                    "name"   : "P21"
                },

                // Header pin 24 does not work as GPIO output. It is not
                // connected here as a result.
                // Uncomment the "ball" member to connect this header pin.
                //
                // Header pin 12 is aliased to the usb UART TX pin.
                {
                    "number" : 12,
                    // "ball"   : "55",
                    "name"   : "P55"
                },
                {
                    "number" : 11,
                    "ball"   : "15",
                    "name"   : "P15"
                }
            ]
        }
    ],

    "components": {
        "LED_BLUE": {
            "displayName" : "LaunchPad Blue LED",
            "definition"  : "/ti/boards/components/led_dimmable.json",
            "connections" : {
                "OUTPUT": "64" /* device pin number */
            }
        },
        "LED_GREEN": {
            "displayName" : "LaunchPad Green LED",
            "definition"  : "/ti/boards/components/led_dimmable.json",
            "connections" : {
                "OUTPUT": "2" /* device pin number */
            }
        },
        "LED_RED": {
            "displayName" : "LaunchPad Red LED",
            "definition"  : "/ti/boards/components/led_dimmable.json",
            "connections" : {
                "OUTPUT": "1" /* device pin number */
            }
        },

        /* symbolic links/aliases for LED portability between LaunchPads */
        "LED": {
            "link" : "LED_BLUE"
        },
        "LED_DIMMABLE": {
            "link" : "LED_GREEN"
        },
        "LED0": {
            "link": "LED_BLUE"
        },
        "LED1": {
            "link": "LED_GREEN"
        },
        "LED2": {
            "link": "LED_RED"
        },
        "LED0_PWM" : {
            "link" : "LED2"
        },
        "LED1_PWM" : {
            "link" : "LED1"
        },
        "LED2_PWM" : {
            "link" : "LED0"
        },

        "OPA4342" : {
            "displayName" : "OPA4342 Operational Amplifier",
            "type": "OP_AMP",
            "description" : "LaunchPad analog input protection OP-AMP",
            "longDescription" : "The [_OPA4342_](https://www.ti.com/product/OPA4342) series rail-to-rail CMOS operational amplifiers are designed for low-cost, low-power, miniature applications. This operational amplifier is used to protect the CC32xx analog input pins.",
            "subComponents": {
                "AIN1": {
                    "definition"  : "/ti/boards/components/analogInput.json",
                    "displayName": "Analog Input 1",
                    "connections" : {
                        "INPUT": "57"
                    }
                },
                "AIN2": {
                    "definition"  : "/ti/boards/components/analogInput.json",
                    "displayName": "Analog Input 2",
                    "connections": {
                        "INPUT": "58"
                    }
                },
                "AIN3": {
                    "definition"  : "/ti/boards/components/analogInput.json",
                    "displayName": "Analog Input 3",
                    "connections": {
                        "INPUT": "59"
                    }
                },
                "AIN4": {
                    "definition"  : "/ti/boards/components/analogInput.json",
                    "displayName": "Analog Input 4",
                    "connections": {
                        "INPUT": "60"
                    }
                }
            }
        },
        "OP_AMP" : {
            "link": "OPA4342"
        },

        "SW2": {
            "displayName" : "LaunchPad Button SW2 (Left)",
            "definition"  : "/ti/boards/components/button.json",
            "longDescription" : "SW2 (Left) LaunchPad button with an external pull-down.",
            /* See schematic linked at top of file */
            "settings": {
                "DIN": {
                    "pull": "None",
                    "interruptTrigger": "Rising Edge"
                }
            },
            "connections" : {
                "INPUT": "4" /* device pin number */
            }
        },
        "SW3": {
            "displayName" : "LaunchPad User Button SW3 (Right)",
            "definition"  : "/ti/boards/components/button.json",
            "longDescription" : "SW3 (Right) LaunchPad button with an external pull-down.",
            /* See schematic linked at top of file */
            "settings": {
                "DIN": {
                    "pull": "None",
                    "interruptTrigger": "Rising Edge"
                }
            },
            "connections" : {
                "INPUT": "15" /* device pin number */
            }
        },

        /* symbolic links/aliases for BUTTON portability between LaunchPads */
        "BUTTON0": {
            "link": "SW2"
        },
        "BUTTON1": {
            "link": "SW3"
        },

        "XDS110UART": {
            "definition"  : "/ti/boards/components/xds110Uart.json",
            "connections" : {
                "RXD" : "57", /* device pin number */
                "TXD" : "55"  /* device pin number */
            }
        },

        "LP_I2C": {
            "displayName" : "LaunchPad I2C",
            "description" : "Standard BoosterPack header I2C",
            "longDescription": "Standard BoosterPack header I2C",
            "definition"  : "/ti/boards/components/i2c.json",
            "connections" : {
                "SCL" : "1", /* device pin number */
                "SDA" : "2"  /* device pin number */
            }
        },

        /*
         * From https://www.bosch-sensortec.com/media/boschsensortec/downloads
         * /datasheets/bst-bma280-ds000.pdf:
         *     The default I2C address of the device is 0011000b (0x18). It
         *     is used if the SDO pin is pulled to GND. The alternative
         *     address 0011001b (0x19) is selected by pulling the SDO pin
         *     to VDDIO
         *
         *     The BMA280 supports I2C standard mode and fast mode, only
         *     7-bit address mode is supported.
         */
        "BMA280": {
            "type": "I2C_SENSOR",
            "displayName": "BMA280 Accelerometer",
            "description": "BMA280 advanced, tri-axial, low-g acceleration sensor",
            "longDescription" : "The [__BMA280__](https://www.bosch-sensortec.com/products/motion-sensors/accelerometers/bma280.html) is an advanced, ultra-small, triaxial, low-g acceleration sensor with digital interfaces, aiming for low-power consumer electronics applications. Featuring 8 bit digital resolution, the BMA280 allows low-noise measurement of accelerations in 3 perpendicular axes.",
            "settings": {
                "address":  24,   /* 0x18 = 16 + 8 = 24 */
                "maxSpeed": "400" /* 400 Kbps (fast-mode) */
            },
            "subComponents": {
                "I2C": {
                    "link": "LP_I2C"
                },

                "INTERRUPT": {
                    "type": "SENSOR_INT",
                    "displayName": "BMA280 Interrupt 1",
                    "description": "BMA280 Interrupt 1",
                    "longDescription": "BMA280 'INT1' interrupt line.",
                    "signals": {
                        "INTERRUPT": {
                            "type": "DIN",
                            "settings": {
                                "interruptTrigger": "Rising Edge",
                                "callbackFunction": "NULL"
                            },
                            "connection": "4" /* device pin number */
                        }
                    }
                }
            }
        },

        /*
         *  http://www.ti.com/lit/ds/symlink/tmp116.pdf:
         *     Section 7.5.3.1: The device supports the transmission protocol
         *     for fast (1 kHz to 400 kHz) mode.
         *
         *     Section 7.5.3.1.2: Table 2
         *         addr  ADDR0 connection
         *         ----  ----------------
         *         0x48  Ground
         *         0x49  V+
         *         0x4A  SDA
         *         0x4B  SCL
         */
        "TMP116": {
            "type"        : "I2C_SENSOR",
            "displayName" : "TMP116 Temperature Sensor",
            "description" : "TMP116 Infrared Thermopile Sensor",
            "longDescription": "The [__TMP116__](http://www.ti.com/product/TMP116) measures the temperature of an object without the need to make contact with the object. This sensor uses a thermopile to absorb the infrared energy emitted from the object being measured and uses the corresponding change in thermopile voltage to determine the object's temperature.",
            "partNum"     : "TI-TMP116",
            "settings": {
                "address":  73,   /* 0x49 = 73 */
                "maxSpeed": "400" /* 400 Kbps (fast-mode) */
            },
            "subComponents": {
                "I2C": {
                    "link": "LP_I2C"
                }
            }
        }
    }
}
